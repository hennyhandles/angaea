<div class="display-it-none create-activity-form-container">
  <h1>Create Your Activity</h1>
  <form class="create-activity-form-css" action="<%= activities_path %>" method="post">
    <input class="" type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>"/>

    <label>
      <div style="display:flex"><div>Activity Name</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="activity[activity_name]" value="">
    </label>

    <label>
      <div style="display:flex"><div>Description</div><div style="color:red"> *</div></div>
      <textarea class="" name="activity[content]"></textarea>
    </label>

    <label>
      Additional Info
      <textarea class="" type="text" name="activity[additional_info]"></textarea>
    </label>

    <label>
      Contact Number
      <input class="" type="text" name="activity[contact_number]" value="">
    </label>

    <label>
      <div style="display:flex"><div>Contact Email</div><div style="color:red"> *</div></div>
      <input class="" type="email" name="activity[contact_email]" value="">
    </label>

    <label>
      <div style="display:flex"><div>Category</div><div style="color:red"> *</div></div>
      <select name="activity[category]">
        <option value="art">art</option>
        <option value="music">music</option>
        <option value="dance">dance</option>
      </select>
    </label>

    <label>
      <div style="display:flex"><div>Price</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="activity[cost]" value="">
    </label>

    <label>
      <div style="display:flex"><div>Max Number of Attendees</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="activity[capacity]" value="">
    </label>

    <label>
      <div style="display:flex"><div>Address 1</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="activity[addressLN1]" value="">
    </label>

    <label>
      Address 2
      <input class="" type="text" name="activity[addressLN2]" value="">
    </label>

    <label>
      <div style="display:flex"><div>City</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="activity[city]" value="">
    </label>

    <label>
      <div style="display:flex"><div>State</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="activity[state]" value="">
    </label>

    <label>
      <div style="display:flex"><div>Zipcode</div><div style="color:red"> *</div></div>
      <input class="" type="text" name="activity[zip]" value="">
    </label>

    <label>
      Start Date
      <input class="" type="datetime-local" name="activity[start_date]" value="">
    </label>

    <label>
      End Date
      <input class="" type="datetime-local" name="activity[end_date]" value="">
    </label>

    <label>
      Picture
      <input class="" type="file" name="activity[picture]" value="">
    </label>

    <input class="btn btn-primary" type="submit" value="Create Activity">
  </form>
</div>
