<div class="users-show-container">
  <div class="users-show-title">Portfolio</div>
  <div class="portfolio-container">
    <div class="users-show-image-container">
      <div class="users-show-image"><%= gravatar_for @user, size: 100 %></div>
    </div>
    <div class="users-show-info-container">
      <div class="users-show-name"><%=@user.name%></div>
      <div><%=@user.about_me%></div>
      <div><%=@user.profession%></div>
      <div><%=@user.skills%></div>
    </div>
  </div>
  <div class="toggle-bar">
    <div class="left-toggle">Activities</div>
    <div class="right-toggle">Rentals</div>
    <%if current_user == @user%>
      <div class="create-activity-toggle">Create Activity</div>
      <div class="create-rental-toggle">Create Rental</div>
    <%end%>
  </div>
  <!-- Activities card -->
  <%= render "layouts/users_show_activity_card", activities: @activities%>
  <!-- Ratings card -->
  <%= render "layouts/ratings_card", activities: @activities%>
  <%= render "layouts/new_activityTwo_form", activity: @activity%>
  <%= render "layouts/new_rental_form", rental: @rental%>
</div>
<%= render "layouts/javascript_user_show"%>
